<form>
  <label text="Scale Demos"/>
  <group varname="s1" typevar="IntVar">
    <scale label="Pick Demo Number" from="0" to="5">
      <variable name="s1" onclick="noop"/>
    </scale>
    <scale label="Pick Demo Number" from="0" to="5" length="200" tickinterval="1" showvalue="YES" orient="horizontal">
      <variable name="s1" onclick="noop"/>
    </scale>
  </group>
  <button text="Quit" command="quit"><pack side="RIGHT"/></button>
  <button text="Run Demo"><pack side="LEFT"/></button>
  <button text="State"><pack side="RIGHT"/></button>
</form>